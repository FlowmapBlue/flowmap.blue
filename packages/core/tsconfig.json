{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "outDir": "dist",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "../../typings/*"
  ]
}
